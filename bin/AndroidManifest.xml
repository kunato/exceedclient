<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kunat.exceedvoteclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.kunat.exceedvoteclient.application.ExceedVoteApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="com.kunat.exceedvoteclient.activity.VoteActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.kunat.exceedvoteclient.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" 
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kunat.exceedvoteclient.activity.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
        android:name="com.kunat.exceedvoteclient.activity.HistoryActivity"
            android:label="@string/title_activity_history" >
        </activity>
    </application>

</manifest>
